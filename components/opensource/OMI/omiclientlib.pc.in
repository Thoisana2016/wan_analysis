prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=@CMAKE_INSTALL_PREFIX@
libdir=${prefix}/@CMAKE_INSTALL_LIBDIR@@LIB_SUFFIX@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@
interfaces_dir=${pc_sysrootdir}${prefix}/@DBUSDIR@

Name: @PROJECT_NAME@
Description: Client library for OCIContainer-Mount-Image (OCI) service.
Version: @PROJECT_VERSION@

Requires: @PKGCONF_REQUIRES_PUBLIC@
Requires.private: @PKGCONF_REQUIRES_PRIVATE@
Libs: -L${libdir} -l@SONAME@ @PKGCONF_LIBS_PUBLIC@
Libs.private: -L"${libdir}" @PKGCONF_LIBS_PRIVATE@
Cflags: -I${includedir}
